        delete from product where id = #{id}
    </delete>
    <update id="update_ProductManagementModel" parameterType="com.example.bunsanedthinking_springback.vo.ProductVO">
        UPDATE product
        SET name = #{name}, maximum_money= #{maximum_money}
        WHERE id = #{id}
    </update>
    <insert id="insert_LoanManagement" parameterType="com.example.bunsanedthinking_springback.vo.ProductVO">
        insert into product(id, name, maximum_money)
        values (
               #{id},
               #{name},
               #{maximum_money}
               )
