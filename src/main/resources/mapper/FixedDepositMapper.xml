<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.FixedDepositMapper">
    <select id="getById_Customer" resultType="com.example.bunsanedthinking_springback.vo.FixedDepositVO">
        select *
        from fixedDeposit
        where product_id = #{id}
    </select>
    <select id="getAll_Customer" resultType="com.example.bunsanedthinking_springback.vo.FixedDepositVO">
        select *
        from fixedDeposit
    </select>
    <select id="getAllFixedDepositLoan_SalesModel"
            resultType="com.example.bunsanedthinking_springback.vo.FixedDepositVO">
        select *
        from fixeddeposit
    </select>
    <insert id="insert_LoanManagement" parameterType="com.example.bunsanedthinking_springback.vo.FixedDepositVO">
        insert into fixeddeposit (product_id, minimum_amount)
        values (#{product_id},
                #{minimum_amount})
    </insert>
    <select id="findById_LoanManagement" resultType="com.example.bunsanedthinking_springback.vo.FixedDepositVO">
        select *
        from fixeddeposit
        where product_id = #{param1}
    </select>
    <delete id="delete_LoanManagement">
        delete
        from fixeddeposit
        where product_id = #{id}
    </delete>
    <update id="update_LoanManagement" parameterType="com.example.bunsanedthinking_springback.vo.FixedDepositVO">
        update fixeddeposit
        set minimum_amount=#{minimum_amount}
        where product_id = #{product_id}
    </update>
    <select id="getMaxId" parameterType="Integer">
        select max(product_id)
        from fixeddeposit
    </select>
</mapper>
