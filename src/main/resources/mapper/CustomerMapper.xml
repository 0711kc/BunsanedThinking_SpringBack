<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.CustomerMapper">
    <select id="getAll_Customer" resultType="com.example.bunsanedthinking_springback.vo.CustomerVO">
        select * from customer
    </select>
    <select id="getById_Customer" resultType="com.example.bunsanedthinking_springback.vo.CustomerVO">
        select * from customer
        where id = #{id}
    </select>
    <select id="getNameById_Customer" resultType="String">
        select name from customer
        where id = #{id}
    </select>
    <select id="getPNById_Customer" resultType="String">
        select phone_number from customer
        where id = #{id}
    </select>

    <select id="getById_Compensation" resultType="com.example.bunsanedthinking_springback.vo.CustomerVO">
        select * from customer
        where id = #{id}
    </select>
    <select id="get_UnderWritingModel" parameterType="int" resultType="com.example.bunsanedthinking_springback.vo.CustomerVO">
        SELECT
            id,
            name,
            phone_number,
            job,
            age,
            gender,
            resident_registration_number,
            address,
            bank_account,
            bank_name
        FROM
            Customer
        WHERE
            id = #{id}
    </select>

    <insert id="insert_SalesModel" parameterType="com.example.bunsanedthinking_springback.vo.CustomerVO">
        INSERT INTO Customer (
            id, address, age, bank_account, bank_name, gender, job, name, phone_number, property, resident_registration_number
        ) VALUES (
                     #{id},
                     #{address},
                     #{age},
                     #{bank_account},
                     #{bank_name},
                     #{gender},
                     #{job},
                     #{name},
                     #{phone_number},
                     #{property},
                     #{resident_registration_number}
                 )
    </insert>

    <select id="get_SalesModel" parameterType="int" resultType="com.example.bunsanedthinking_springback.vo.CustomerVO">
        select * from Customer
        where id = #{id}
    </select>
    <select id="findById_FinancialAccountant" resultType="com.example.bunsanedthinking_springback.vo.CustomerVO">
        select *
        from customer
        where id=#{param1}
    </select>
    <insert id="insert_customerInformationManagement" parameterType="com.example.bunsanedthinking_springback.entity.customer.Customer">
        INSERT INTO customer (name, phone_number, job, age, gender, resident_registration_number, address, property, bank_name, bank_account)
        VALUES (#{customer.name},
                #{customer.phoneNumber},
                #{customer.job},
                #{customer.age},
                #{customer.gender},
                #{customer.residentRegistrationNumber},
                #{customer.address},
                #{customer.property},
                #{customer.bankName},
                #{customer.bankAccount});
    </insert>
    <delete id="delete_customerInformationManagement" parameterType="int">
        DELETE FROM customer
        WHERE id = #{id};
    </delete>
    <select id="findById_customerInformationManagement" parameterType="int" resultType="com.example.bunsanedthinking_springback.entity.customer.Customer">
        SELECT * FROM customer
        WHERE id = #{id};
    </select>
    <select id="findByResidentRegistrationNumber_customerInformationManagement" parameterType="string" resultType="com.example.bunsanedthinking_springback.entity.customer.Customer">
        SELECT * FROM customer
        WHERE resident_registration_number = #{residentRegistrationNumber};
    </select>
    <update id="update_customerInformationManagement" parameterType="com.example.bunsanedthinking_springback.entity.customer.Customer">
        UPDATE customer
        SET name = #{customer.name},
            phone_number = #{customer.phoneNumber},
            job = #{customer.job},
            age = #{customer.age},
            gender = #{customer.gender},
            address = #{customer.address},
            property = #{customer.property},
            bank_name = #{customer.bankName},
            bank_account = #{customer.bankAccount}
        WHERE id = #{customer.id};
    </update>
    <select id="getAll_customerInformationManagement" resultType="com.example.bunsanedthinking_springback.entity.customer.Customer">
        SELECT * FROM customer;
    </select>
</mapper>
