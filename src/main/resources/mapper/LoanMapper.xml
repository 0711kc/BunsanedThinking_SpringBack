<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.LoanMapper">
    <insert id="insert_LoanManagement" parameterType="map">
        insert into loan(product_id, loan_type, minimum_asset, monthly_income, interest_rate)
        values (#{loan.product_id},
                #{loan.loan_type},
                #{loan.minimum_asset},
                #{loan.monthly_income},
                #{loan.interest_rate}
               )
    </insert>
    <select id="getLoanById_Customer" resultType="com.example.bunsanedthinking_springback.vo.LoanVO">
        select * from loan
        where product_id = #{id}
    </select>
    <select id="getAll_Customer" resultType="com.example.bunsanedthinking_springback.vo.LoanVO">
        select * from loan
    </select>
    <select id="get_SalesModel" parameterType="int" resultType="com.example.bunsanedthinking_springback.vo.LoanVO">
        select * from loan
        where product_id = #{id}
    </select>
</mapper>
