<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.RevivalMapper">
    <select id="getById_Customer" resultType="com.example.bunsanedthinking_springback.vo.RevivalVO">
        select * from revival
        where contract_id = #{id}
    </select>
    <insert id="addById_Customer">
        insert into revival(contract_id, origin_contract_id, revival_status)
        values (#{contractId}, #{contractId}, 1)
    </insert>

    <select id="getById_ContractManagement" resultType="com.example.bunsanedthinking_springback.vo.RevivalVO">
        select * from revival
        where contract_id = #{id}
    </select>
    <select id="getAll_ContractManagement" resultType="com.example.bunsanedthinking_springback.vo.RevivalVO">
        select * from revival
    </select>
    <select id="updateStatus_ContractManagement">
        update revival
        set revival_status = #{status}
        where contract_id = #{id}
    </select>

    <select id="getMaxId" resultType="int">
        SELECT MAX(contract_id)
        FROM revival
    </select>
    <insert id="insert" parameterType="com.example.bunsanedthinking_springback.vo.RevivalVO">
        INSERT INTO revival (contract_id, apply_date, origin_contract_id, revival_status)
        VALUES (#{contract_id}, #{apply_date}, #{origin_contract_id}, #{revival_status});
    </insert>
    <update id="update" parameterType="com.example.bunsanedthinking_springback.vo.RevivalVO">
        UPDATE revival
        SET apply_date = #{apply_date},
            origin_contract_id = #{origin_contract_id},
            revival_status = #{revival_status}
        WHERE contract_id = #{contract_id};
    </update>
    <delete id="deleteById" parameterType="int">
        DELETE FROM revival
        WHERE contract_id = #{id};
    </delete>
</mapper>