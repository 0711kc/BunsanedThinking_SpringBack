<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.SalesMapper">
    <select id="get_SalesModel" parameterType="int" resultType="com.example.bunsanedthinking_springback.vo.SalesVO">
        select *
        from Sales
        where employee_id = #{id}
    </select>

    <select id="getAll_SalesModel" resultType="com.example.bunsanedthinking_springback.vo.SalesVO">
        SELECT employee_id,
               evaluate,
               contract_count
        FROM Sales
    </select>

    <update id="updateEvaluate_SalesModel" parameterType="map">
        UPDATE Sales
        SET evaluate = #{evaluate}
        WHERE employee_id = #{id}
    </update>

    <update id="update_SalesModel" parameterType="com.example.bunsanedthinking_springback.vo.SalesVO">
        UPDATE Sales
        SET evaluate       = #{evaluate},
            contract_count = #{contract_count}
        WHERE employee_id = #{employee_id}
    </update>

    <select id="getMaxId" parameterType="Integer">
        select max(employee_id)
        from sales
    </select>
    <insert id="insert" parameterType="com.example.bunsanedthinking_springback.vo.SalesVO">
        insert into sales(employee_id, evaluate, contract_count)
        values (#{employee_id}, #{evaluate}, #{contract_count})
    </insert>
    <delete id="deleteById" parameterType="int">
        delete
        from sales
        where employee_id = #{id}
    </delete>
</mapper>
