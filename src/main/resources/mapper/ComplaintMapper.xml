<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.ComplaintMapper">
    <select id="getComplaintById_Customer" resultType="com.example.bunsanedthinking_springback.vo.ComplaintVO">
        select * from complaint
        where id = #{id}
    </select>
    <select id="getComplaintByCustomerId_Customer" resultType="com.example.bunsanedthinking_springback.vo.ComplaintVO">
        select * from complaint
        where customer_id = #{id}
    </select>
</mapper>