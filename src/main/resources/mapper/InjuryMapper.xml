<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.InjuryMapper">
    <select id="getById_Customer" resultType="com.example.bunsanedthinking_springback.vo.InjuryVO">
        select *
        from injury
        where product_id = #{id}
    </select>
    <select id="getById_ProductManagementModel" resultType="com.example.bunsanedthinking_springback.vo.InjuryVO">
        select *
        from injury
        where product_id = #{id}
    </select>
    <select id="getAll_Customer" resultType="com.example.bunsanedthinking_springback.vo.InjuryVO">
        select *
        from injury
    </select>
    <select id="getAllInjuryInsurance_SalesModel" resultType="com.example.bunsanedthinking_springback.vo.InjuryVO">
        select *
        from Injury
    </select>
    <insert id="insert_ProductManagement" parameterType="com.example.bunsanedthinking_springback.vo.InjuryVO">
        insert into Injury(product_id, injury_type, surgeries_limit)
        values (#{product_id},
                #{injury_type},
                #{surgeries_limit})
    </insert>
    <update id="update_ProductManagementModel" parameterType="com.example.bunsanedthinking_springback.vo.InjuryVO">
        UPDATE Injury
        SET injury_type     = #{injury_type},
            surgeries_limit = #{surgeries_limit}
        WHERE product_id = #{product_id}
    </update>
    <select id="findById_FinancialAccountant" resultType="com.example.bunsanedthinking_springback.vo.InjuryVO">
        select *
        from injury
        where product_id = #{param1}
    </select>
    <delete id="deleteById" parameterType="int">
        delete
        from injury
        where product_id = #{id}
    </delete>
    <select id="getMaxId" parameterType="Integer">
        select max(product_id)
        from injury
    </select>
</mapper>
