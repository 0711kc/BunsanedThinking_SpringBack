<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.SalesMapper">
    <select id="get_SalesModel" parameterType="int" resultType="SalesVO">
                select * from Sales
                where employee_id = #{id}
    </select>

    <update id="updateEvaluate_SalesModel" parameterType="map">
        UPDATE Sales
        SET evaluate = #{evaluate}
        WHERE employee_id = #{id}
    </update>

</mapper>