<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bunsanedthinking_springback.repository.CollateralMapper">
    <insert id="insert_LoanManagement" parameterType="map">
        insert into collateral(product_id, collateral_type, minimum_value)
        values (
                #{collateral.product_id},
                #{collateral.collateral_type},
                #{collateral.minimum_value}
               )
    </insert>
    <select id="getCollateralById_Customer" resultType="com.example.bunsanedthinking_springback.vo.CollateralVO">
        select * from collateral
        where product_id = #{id}
    </select>
    <select id="getAll_Customer" resultType="com.example.bunsanedthinking_springback.vo.CollateralVO">
    <select id="getAllCollateralLoan_SalesModel" resultType="com.example.bunsanedthinking_springback.vo.CollateralVO">
        select * from collateral
    </select>
</mapper>
