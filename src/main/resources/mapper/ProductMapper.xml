    <select id="getAll_LoanManagement" resultType="com.example.bunsanedthinking_springback.vo.ProductVO">
        select *
        from product
    </select>
    <select id="findById_LoanManagement" resultType="com.example.bunsanedthinking_springback.vo.ProductVO">
        select *
        from product
        where id = #{param1}
    </select>
